<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/top_toolbar" />
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Character Name" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_character_name"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Player Name" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_player_name"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Initiative" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_initiative"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Max Health" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_max_health"
            android:inputType="number"
            android:maxLength="4" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Armor Class" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_armor"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddCombatantLayout">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Passive Perception" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/edit_perception"
            android:inputType="number"
            android:maxLength="2" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <include
        layout="@layout/top_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/white">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Combatant Name" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/add_character_name"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/lightgrey">
        <TextView
            style="@style/AddCombatantTextView"
            android:text="Player Name" />
        <EditText
            style="@style/AddCombatantEditText"
            android:id="@+id/add_player_name"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                style="@style/AddCombatantTextView"
                android:text="Initiative" />
            <EditText
                style="@style/AddCombatantEditText.Stat"
                android:id="@+id/add_initiative" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="5dp">
            <TextView
                style="@style/AddCombatantTextView"
                android:text="Max Health" />
            <EditText
                style="@style/AddCombatantEditText.Stat"
                android:id="@+id/add_max_health"
                android:maxLength="4" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/lightgrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                style="@style/AddCombatantTextView"
                android:text="Perception" />
            <EditText
                style="@style/AddCombatantEditText.Stat"
                android:id="@+id/add_perception" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                style="@style/AddCombatantTextView"
                android:text="Armor Class" />
            <EditText
                style="@style/AddCombatantEditText.Stat"
                android:id="@+id/add_armor" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/AddCombatantTextView"
        android:text="Number To Create" />
    <EditText
        style="@style/AddCombatantEditText.Stat"
        android:id="@+id/create_number" />
</LinearLayout>
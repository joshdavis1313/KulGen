<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <include
        layout="@layout/top_toolbar" />
    <RadioGroup
        style="@style/AddEditCombatantLayout"
        android:id="@+id/radio_player_npc"
        android:background="@color/white">
        <RadioButton
            android:id="@+id/radio_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_color"
            android:text="Player" />
        <RadioButton
            android:id="@+id/radio_npc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPC"
            android:buttonTint="@color/primary_color"
            android:checked="true" />
    </RadioGroup>
    <LinearLayout
        style="@style/AddEditCombatantLayout"
        android:background="@color/secondary_color">
        <TextView
            style="@style/AddEditCombatantTextView"
            android:text="Combatant Name" />
        <EditText
            style="@style/AddEditCombatantEditText"
            android:id="@+id/add_character_name"
            android:inputType="textCapSentences" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddEditCombatantLayout"
        android:background="@color/white">
        <LinearLayout
            style="@style/AddEditCombatantLayout"
            android:layout_weight="1">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:text="Initiative" />
            <EditText
                style="@style/AddEditCombatantEditText.Stat"
                android:id="@+id/add_initiative" />
        </LinearLayout>
        <LinearLayout
            style="@style/AddEditCombatantLayout"
            android:layout_weight="1">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:text="Max Health" />
            <EditText
                style="@style/AddEditCombatantEditText.Stat"
                android:id="@+id/add_max_health"
                android:maxLength="4" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/AddEditCombatantLayout"
        android:background="@color/secondary_color">
        <LinearLayout
            style="@style/AddEditCombatantLayout"
            android:layout_weight="1">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:text="Perception" />
            <EditText
                style="@style/AddEditCombatantEditText.Stat"
                android:id="@+id/add_perception" />
        </LinearLayout>
        <LinearLayout
            style="@style/AddEditCombatantLayout"
            android:layout_weight="1">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:text="Armor Class" />
            <EditText
                style="@style/AddEditCombatantEditText.Stat"
                android:id="@+id/add_armor" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/AddEditCombatantLayout"
        android:id="@+id/layout_add_create_number"
        android:background="@color/white">
        <TextView
            style="@style/AddEditCombatantTextView"
            android:text="Number To Create" />
        <EditText
            style="@style/AddEditCombatantEditText.Stat"
            android:id="@+id/add_create_number" />
    </LinearLayout>
    <LinearLayout
        style="@style/AddEditCombatantLayout"
        android:id="@+id/layout_add_player_name"
        android:background="@color/white">
        <TextView
            style="@style/AddEditCombatantTextView"
            android:text="Player Name" />
        <EditText
            style="@style/AddEditCombatantEditText"
            android:id="@+id/add_player_name"
            android:inputType="textCapSentences" />
    </LinearLayout>
</LinearLayout>
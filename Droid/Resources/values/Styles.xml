<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Theme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
    	<item name="android:actionMenuTextColor">@color/secondary_color</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    	<item name="actionMenuTextColor">@color/secondary_color</item>
    </style>

    <style name="BottomToolbarButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/toolbar_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Combat Tracker -->
    <style name="CombatItemContainer">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CombatItemStatTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="CombatItemStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="CombatItemHealthButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/darkred</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="CombatItemHealthMinusPlusButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/darkred</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

	<!-- Add Combatant -->
    <style name="AddEditCombatantLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddEditCombatantStatContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddEditCombatantTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="AddEditCombatantEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AddEditCombatantEditText.Stat">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

	<!-- Options Menu -->
    <style name="OptionsSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="OptionRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
    </style>

	<!-- Help -->
    <style name="HelpSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="HelpTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="HelpTextView.Title">
		<item name="android:textStyle">bold</item>
    </style>
    <style name="HelpTextView.TopTitle">
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
    </style>
    <style name="HelpTextView.MultiLine">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HelpTextView.Hyperlink">
        <item name="android:textColor">@color/darkred</item>
    </style>
	
</resources>